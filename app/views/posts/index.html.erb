<%= render "home/header" %>
<%= render "home/flash_message" %>

<div class="container">

	<div class="row">

		<div class="col-sm-3" style="padding:0px;">
			<%= render "home/sidebar" %>
		</div>

		<div class="col-sm-9">

			<div class="row">
				<% if @word %>
				<h3 class="common-title" style="margin:25px auto"><b><%= @word %></b></h3>
				<% end %>
			</div>

			<% @posts.each do |p| %>
			<div class="post-box">
				<div class ="row">

					<div class="col-sm-5">
						<%= link_to post_path(p.id) do %>
						<div class="post-show-image-wrapper">
							<% unless p.post_image.file.nil? %>
							<img src="<%= p.post_image %>", class="post-show-image">
							<% else %>
							<%= image_tag "post-no-image.jpg", class: "post-show-image" %>
							<% end %>
						</div>
						<% end %>
					</div>

					<div class="col-sm-7" style="padding-left:0px;">
						<h4 class="post-box-title"><%= link_to p.title, post_path(p.id), class: "no-decoration-link" %></h4>
					</div>

				</div>
			</div>
			<% end %>

		</div>
	</div>
</div>