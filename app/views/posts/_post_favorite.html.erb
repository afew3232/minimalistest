<div><!--引数 post: @post-->

	<!--favorited?メソッドは、「good」されてれば true返す コードはhelper内参照-->
	<% if favorited?(current_user.id, post.id) %>
		<%= link_to "good! #{favorited_count(post.id)}", favorites_destroy_path(post_id: post.id,user_id: current_user.id), method: :delete, remote: true, class: "btn btn-danger" %>
	<% else %>
		<%= link_to "good! #{favorited_count(post.id)}", favorites_create_path(post_id: post.id, user_id: current_user.id), method: :post, remote: true, class: "btn btn-outline-danger"  %>
	<% end %>

</div>