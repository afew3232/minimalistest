<%= render "home/header" %>

<div class="container">
	<div class="row">
		<div class="col-sm-8 offset-sm-2">
			<%= render "devise/shared/error_messages", resource: @post %>

			<h3 class="common-title">新しい記事</h3>

			<%= form_for @post, url: posts_confirm_new_path, method: :get do |f| %>
				<div class="row">
					<div class="col-sm-2">
						<label>タイトル</label>
					</div>
					<div class="col-sm-10">
						<%= f.text_field :title, class: "form-control",placeholder: "タイトル" %>
					</div>
				</div>

				<div class="row" style="margin-top:15px;">
					<div class="col-sm-2">
						<label>本文</label>
					</div>
					<div class="col-sm-10">
						<%= f.text_area :text, class: "form-control",placeholder: "本文", style: "resize:none;", rows:14 %>
					</div>
				</div>

				<div class="row">
					<%= f.submit "確認画面へ", class: "btn btn-info" %>
				</div>

			<% end %>

		</div>
	</div>
</div>