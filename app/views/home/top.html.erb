<%= render "home/header" %>

<div class="container">
	<div class="row">
		<h5 style="margin:30px;"><%= link_to "Minimalistestとは？", home_about_path %></h5>
	</div>

	<div class="row">

		<div class="col-sm-6">
			<h3 class="common-title">ランキング</h3>
			<% @post_rank.each do |p| %>
			<div class="post-box">
				<div class ="row">

					<div class="col-sm-5">
						<%= link_to post_path(p.id) do %>
						<div class="post-show-image-wrapper">
							<% unless p.post_image.file.nil? %>
								<img src="<%= p.post_image %>", class="post-show-image">
							<% else %>
								<%= image_tag "post-no-image.jpg", class: "post-show-image" %>
							<% end %>
						</div>
						<% end %>
					</div>

					<div class="col-sm-7" style="padding-left:0px;">
						<h4 class="post-box-title"><%= link_to p.title, post_path(p.id), class: "no-decoration-link" %></h4>
					</div>

				</div>
			</div>
			<% end %>
		</div>

		<div class="col-sm-6">
			<h3 class="common-title">新着記事</h3>
			<% @posts.each do |p| %>
			<div class="post-box">
				<div class ="row">

					<div class="col-sm-5">
						<%= link_to post_path(p.id) do %>
						<div class="post-show-image-wrapper">
							<% unless p.post_image.file.nil? %>
								<img src="<%= p.post_image %>", class="post-show-image">
							<% else %>
								<%= image_tag "post-no-image.jpg", class: "post-show-image" %>
							<% end %>
						</div>
						<% end %>
					</div>

					<div class="col-sm-7" style="padding-left:0px;">
						<h4 class="post-box-title"><%= link_to p.title, post_path(p.id), class: "no-decoration-link" %></h4>
					</div>

				</div>
			</div>
			<% end %>
		</div>

	</div>

</div>
