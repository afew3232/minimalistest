<%= render "home/header" %>

<div class="container">
	<div class="row">
		<div class="col-sm-8 offset-sm-2">
			<h3 class="common-title"><%= @post.title %></h3>
			<p><%= @post.text %></p>

			<!--自分の記事 → 編集リンク-->
			<% if user_signed_in? %>
				<% if current_user.id == @post.user_id %>
					<%= link_to "この記事を編集する", edit_post_path, class: "btn btn-info" %>
				<% end %>
			<% end %>

		</div>
	</div>
</div>