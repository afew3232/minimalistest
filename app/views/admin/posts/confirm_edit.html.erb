<%= render "admin/home/header" %>

<div class="container">
	<div class="row">
		<div class="col-sm-8 offset-sm-2">
			<% if flash[:notice] %>
				<p><%= flash[:notice] %></p>
			<% end %>

			<h3 class="common-title">確認画面</h3>
			<p style="border-bottom:solid gray 2px;padding:10px;margin-bottom:10px;">以下の内容で表示されます。</p>

			<h3><%= @post.title %></h3>
			<div class="post-show-image-wrapper">
				<%= attachment_image_tag @post, :image, fallback: "post-no-image.jpg", class: "post-show-image" %>
			</div>
			<p><%= simple_format(@post.text) %></p>

			<%= form_for @post, url: admin_post_path(@post.id),method: :patch do |f| %>

				<%= f.hidden_field :user_id, value: current_user.id %>
				<%= f.hidden_field :title %>
				<%= f.hidden_field :text %>
				<%= hidden_field_tag :post_image, @post_image %>
				<%= f.submit "編集完了", class: "btn btn-info" %>

			<% end %>

		</div>
	</div>
</div>