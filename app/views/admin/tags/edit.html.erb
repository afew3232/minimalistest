<%= render "admin/home/header" %>

<div class="container">
	<div class="row">
		<div class="col-sm-8 offset-sm-2">
			<%= render "devise/shared/error_messages", resource: @tag %>

			<%= form_for @tag, url: admin_tag_path do |f| %>
				<%= f.text_field :name %>
				<%= f.submit "編集" %>
			<% end %>
			<%= link_to "削除",admin_tag_path(@tag.id), method: :delete, data: { confirm: "Are you sure?" } %>

		</div>
	</div>
</div>