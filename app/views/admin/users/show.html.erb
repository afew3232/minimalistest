<%= render "admin/home/header" %>

<div class="container">
	<div class="row">
		<div class="col-sm-8 offset-sm-2">

			<div class="row">
				<h3 class="common-title">会員詳細情報</h3>
			</div>

			<div class="row">
				<div class="col-sm-4">
					<p><b>ID</b></p>
				</div>
				<div class="col-sm-8">
					<p><%= @user.id %></p>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-4">
					<p><b>ニックネーム</b></p>
				</div>
				<div class="col-sm-8">
					<p><%= @user.nickname %></p>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-4">
					<p><b>メールアドレス</b></p>
				</div>
				<div class="col-sm-8">
					<p><%= @user.email %></p>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-4">
					<p><b>名前</b></p>
				</div>
				<div class="col-sm-8">
					<p><%= @user.lastname %> <%= @user.firstname %></p>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-4">
					<p><b>名前(カナ)</b></p>
				</div>
				<div class="col-sm-8">
					<p><%= @user.lastname_kana %> <%= @user.firstname_kana %></p>
				</div>
			</div>

			<%= link_to "編集", edit_admin_user_path(@user.id), class: "btn btn-info" %>

			<div class="row">
				<h3 class="common-title">投稿した記事</h3>
			</div>

			<table class="table">
				<tr>
					<th>タイトル</th>
					<th>いいね数</th>
					<th></th>
				</tr>
				<% @posts.each do |p| %>
					<tr>
						<td><%= link_to p.title, admin_post_path(p.id) %></td>
						<td>good数：<%= favorited_count(p.id) %></td>
						<td><%= link_to "編集", edit_admin_post_path(p.id), class: "btn btn-info" %></td>
					</tr>
				<% end %>
			</table>

		</div>
	</div>
</div>
