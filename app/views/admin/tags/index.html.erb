<%= render "admin/home/header" %>



<div class="container">
	<div class="row">
		<div class="col-sm-8 offset-sm-2">
			<%= render "devise/shared/error_messages", resource: @tag %>
			<% if flash[:notice] %>
				<p><%= flash[:notice] %></p>
			<% end %>

			<%= form_for @tag, url: admin_tags_path do |f| %>
				<%= f.text_field :name %>
				<%= f.submit "追加" %>
			<% end %>

			<table class="table">
				<tr>
					<th>名前</th>
					<th></th>
					<th></th>
				</tr>

				<% @tags.each do |t| %>
				<tr>
					<td><%= t.name %></td>
					<td><%= link_to "編集",edit_admin_tag_path(t.id) %></td>
					<td><%= link_to "削除",admin_tag_path(t.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
				</tr>
				<% end %>

			</table>

		</div>
	</div>
</div>
