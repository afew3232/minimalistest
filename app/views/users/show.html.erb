<%= render "home/header" %>

<div class="container">
	<div class="row">
		<div class="col-sm-8 offset-sm-2">
			<div class="row">
				<h3 class="common-title">MyPage</h3>
			</div>
			<div class="row">
				<div class="col-sm-4">
					<p><b>ニックネーム</b></p>
				</div>
				<div class="col-sm-8">
					<p><%= @user.nickname %></p>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-4">
					<p><b>メールアドレス</b></p>
				</div>
				<div class="col-sm-8">
					<p><%= @user.email %></p>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-4">
					<p><b>名前</b></p>
				</div>
				<div class="col-sm-8">
					<p><%= @user.lastname %> <%= @user.firstname %></p>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-4">
					<p><b>名前(カナ)</b></p>
				</div>
				<div class="col-sm-8">
					<p><%= @user.lastname_kana %> <%= @user.firstname_kana %></p>
				</div>
			</div>


			<% if current_user.id == @user.id %>
				<%= link_to "編集", edit_user_path(@user.id), class: "btn btn-info" %>
			<% end %>

		</div>
	</div>
</div>
